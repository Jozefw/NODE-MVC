    <body>
        <%- include('../includes/navigation.ejs') %>
        <main>
            <% if (orders.length <= 0){ %>

            <h1>Nothing there!</h1>
            <% } else { %>
            <ul>
                <% orders.forEach(orderItem => {  %>
                    <li>
                    <h1># <%= orderItem.id %></h1>
                    <ul>
                        <% orderItem.products.forEach(item =>{ %>
                        <li><%= item.title %> (<%= item.orderItem.quantity %>)</li>
                        <% }); %>
                    </ul>
                </li>
                    <% });  %>
                </ul>    
                <% } %>
        </main>
        <%- include('../includes/end.ejs') %>